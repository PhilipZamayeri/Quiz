package Server;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

/**
 * Created by Donatas Auzelis
 * Date: 2020-11-17
 * Time: 18:05
 * Project: Quiz
 * Copyright: MIT
 */

public class GUI_Test extends JFrame implements ActionListener {

    private int correctAnswers = 0;
    private int result = 0;

    JFrame frame = new JFrame("QUIZ");

    JPanel mainPanel = new JPanel();

    JPanel gamePanel = new JPanel();

    JButton newGame = new JButton("Nytt spel");
    JButton testButton = new JButton("TEST");

    JLabel question = new JLabel("FRÅGAN HÄR", SwingConstants.CENTER);
    JButton button1 = new JButton("ALTERNATIV 1");
    JButton button2 = new JButton("ALTERNATIV 2");
    JButton button3 = new JButton("ALTERNATIV 3");
    JButton button4 = new JButton("ALTERNATIV 4");


    public GUI_Test() {

        add(mainPanel);
        mainPanel.setSize(400, 500);
        mainPanel.setBackground(new Color(127, 61, 61));
        mainPanel.setLayout(null);

        newGame.setBounds(50, 150, 300, 50);
        //newGame.setLocation(100, 200);
        //newGame.setPreferredSize(new Dimension(300, 50));
        newGame.setBackground(new Color(0x9252260E, true));
        newGame.setOpaque(true);

        testButton.setBounds(50, 200, 300, 50);

        newGame.addActionListener(this);

        mainPanel.add(newGame);
        mainPanel.add(testButton);

        setVisible(true);
        setSize(400, 500);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);


    }

    public void startNewGame() {
        mainPanel.setVisible(false);
        add(gamePanel);

        gamePanel.add(button1);
        gamePanel.add(button2);
        gamePanel.add(button3);
        gamePanel.add(button4);
        gamePanel.add(question);


        question.setLocation(50, 100);
        question.setSize(300, 50);
        question.setVisible(true);

        button1.setBounds(30, 200, 155, 50);
        button2.setBounds(220, 200, 155, 50);
        button3.setBounds(30, 250, 155, 50);
        button4.setBounds(220, 250, 155, 50);


        gamePanel.setBackground(new Color(127, 61, 61));
        gamePanel.setLayout(null);

        setVisible(true);
        setSize(400, 500);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(EXIT_ON_CLOSE);


    }



    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == newGame) startNewGame();
    }

    public static void main(String[] args) {
        new GUI_Test();
    }
}
